{
  "telemetry": {
    "webSocketUrl": "ws://127.0.0.1:7117/",
    "enableWebSocket": true,
    "enableUdp": false,
    "udpPort": 7117,
    "reconnectDelayMs": 1000,
    "receiveQueueLimit": 2048
  },
  "buses": {
    "rumble": {
      "renderDeviceName": "VB-Audio Virtual Cable",
      "channels": 2,
      "sampleRate": 48000,
      "desiredLatencyMs": 50,
      "exclusiveMode": false,
      "bufferSizeFrames": 512,
      "gainDb": 0,
      "lowPassHz": 120,
      "highPassHz": 20,
      "delayMs": 0
    },
    "impact": {
      "renderDeviceName": "VB-Audio Virtual Cable",
      "channels": 2,
      "sampleRate": 48000,
      "desiredLatencyMs": 50,
      "exclusiveMode": false,
      "bufferSizeFrames": 512,
      "gainDb": 0,
      "lowPassHz": 180,
      "highPassHz": 25,
      "delayMs": 0
    }
  },
  "mappings": [
    {
      "name": "movement_rumble",
      "bus": "rumble",
      "match": {},
      "mode": "continuous",
      "gainDb": -9,
      "route": { "preset": "all" },
      "generator": { "type": "sine", "frequencyHz": 55 },
      "continuous": {
        "amplitudeFrom": { "field": "speed", "min": 0, "max": 10, "curve": "sqrt", "scale": 0.8, "offset": 0 },
        "frequencyFrom": { "field": "speed", "min": 0, "max": 20, "curve": "linear", "scale": 40, "offset": 35 },
        "updateSmoothingMs": 50
      }
    },
    {
      "name": "elytra_wind",
      "bus": "rumble",
      "match": {},
      "mode": "continuous",
      "gainDb": -18,
      "route": { "preset": "all" },
      "generator": { "type": "noise", "noiseColor": 0.3 },
      "filter": { "highPassHz": 40, "lowPassHz": 200 },
      "continuous": {
        "amplitudeFrom": { "field": "elytra", "min": 0, "max": 1, "curve": "linear", "scale": 0.6, "offset": 0 }
      }
    },
    {
      "name": "explosion",
      "bus": "impact",
      "match": { "type": "event", "id": "explosion" },
      "mode": "oneshot",
      "gainDb": -2,
      "route": { "preset": "all" },
      "generator": { "type": "noise", "durationMs": 180, "noiseColor": 0.6 },
      "envelope": { "attackMs": 0, "holdMs": 10, "releaseMs": 180 },
      "filter": { "lowPassHz": 160, "highPassHz": 25 }
    },
    {
      "name": "block_break",
      "bus": "impact",
      "match": { "type": "event", "id": "block_break" },
      "mode": "oneshot",
      "gainDb": -8,
      "route": { "preset": "all" },
      "generator": { "type": "impulse", "durationMs": 40 },
      "envelope": { "attackMs": 0, "holdMs": 0, "releaseMs": 60 },
      "filter": { "lowPassHz": 220, "highPassHz": 35 }
    },
    {
      "name": "damage_hit",
      "bus": "impact",
      "match": { "type": "event", "id": "damage" },
      "mode": "oneshot",
      "gainDb": -6,
      "route": { "preset": "all" },
      "generator": { "type": "sine", "frequencyHz": 70, "durationMs": 90 },
      "envelope": { "attackMs": 0, "holdMs": 0, "releaseMs": 90 },
      "filter": { "lowPassHz": 160, "highPassHz": 30 }
    }
  ]
}
